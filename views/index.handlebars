{{!-- set-up templates that HB can render to --}}
{{!-- id, burger_name, devoured --}}
<div class="container">

  <div class="jumbotron">
    <h1 class="display-4">Eat-Da-Burger</h1>
    <p class="lead">Enter a type of burger you would like to eat. Then click the devour button to add it to the devoured
      group.</p>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-sm">
        <h2>Burgers that are not devoured!</h2>
        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
      <div class="col-sm">
        <h2>Add a Burger</h2>
        <form class="create-form">
          <div class="form-group">
            <label for="brg">Burger Name:</label>
            <input type="text" id="brg" name="burger_name">
          </div>
          {{!-- create a button that will submit user input to database --}}
          <button class='btn btn-primary' type="submit">Add Burger</button>
        </form>
      </div>
      <div class="col-sm">
        <h2>Burgers that are devoured!</h2>
        <ul>
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>